@using Fruitify.Common

@{
    ViewData["Title"] = "Footer view";
}

<footer class="ftco-footer ftco-section bg-primary">
    <div class="container">
        <div class="row">
            <div class="mouse">
                <a href="#" class="mouse-icon">
                    <div class="mouse-wheel"><span class="icon-keyboard_arrow_up"></span></div>
                </a>
            </div>
        </div>
        <div class="row mb-5 text-white">
            <div class="col-md">
                <div class="ftco-footer-widget mb-4">
                    <h2 class="ftco-heading-2 text-white">Frutify</h2>
                    <p>Плодовете и Зеленчуците, се грижат за здравето във всеки дом.</p>
                    <ul class="ftco-footer-social list-unstyled float-md-left float-lft mt-5">
                        <li><a href="#"><span class="icon-twitter text-white"></span></a></li>
                        <li><a href="#"><span class="icon-facebook text-white"></span></a></li>
                        <li><a href="#"><span class="icon-instagram text-white"></span></a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md">
                <div class="ftco-footer-widget mb-4 ml-md-5">
                    <h2 class="ftco-heading-2 text-white">Меню</h2>
                    <ul class="list-unstyled">
                        <li><a href="#" class="py-2 d-block text-white">Пазарувай</a></li>
                        <li><a href="#" class="py-2 d-block text-white">За нас</a></li>
                        <li><a href="#" class="py-2 d-block text-white">Блог</a></li>
                        <li><a href="#" class="py-2 d-block text-white">Контакти</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-4">
                <div class="ftco-footer-widget mb-4">
                    <h2 class="ftco-heading-2 text-white">Помощ</h2>
                    <div class="d-flex">
                        <ul class="list-unstyled mr-l-5 pr-l-3 mr-4">
                            <li><a href="#" class="py-2 d-block text-white">Условия за доставка</a></li>
                            <li><a href="#" class="py-2 d-block text-white">Връщане и замяна</a></li>
                            <li><a href="#" class="py-2 d-block text-white">Общи условия</a></li>
                            <li><a href="#" class="py-2 d-block text-white">Политика за поверителност</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md">
                <div class="ftco-footer-widget mb-4">
                    <h2 class="ftco-heading-2 text-white">Имате въпрос?</h2>
                    <div class="block-23 mb-3">
                        <ul>
                            <li><span class="icon icon-map-marker"></span><span class="text-white">203 Fake St. Mountain View, San Francisco, California, USA</span></li>
                            <li><a href="#"><span class="icon icon-phone text-white"></span><span class="text-white">+2 392 3929 210</span></a></li>
                            <li><a href="#"><span class="icon icon-envelope text-white"></span><span class="text-white">info@yourdomain.com</span></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-center">
                <p class="text-white">
                    Всички права запзени &copy; @DateTime.Now.Year - @GlobalConstants.SystemName - <a class="text-secondary" asp-area="" asp-controller="Home" asp-action="Privacy">Поверителност</a>
                </p>
            </div>
        </div>
    </div>
</footer>
