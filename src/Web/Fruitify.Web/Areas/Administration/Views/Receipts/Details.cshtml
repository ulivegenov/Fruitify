@using Fruitify.Data.Models.Enums.Receipt

@model Fruitify.Web.ViewModels.Administration.Receipts.ReceiptWebDetailsModel

@{
    this.ViewData["Title"] = "Receipt Details";
}

<div class="row mb-3">
    <div style="margin:auto">
        <form id="account" enctype="multipart/form-data" method="post">
            <h4 class="text-center">Детайли</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type"></label>
                <select asp-for="Type" asp-items="Html.GetEnumSelectList<ReceiptType>()" class="form-control">
                    <option value="">Избери вид</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Image" type="hidden" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary" asp-area="Administration" asp-controller="Receipts" asp-action="Edit" asp-route-id="@Model.Id">Промени</button>
                <button type="submit" class="btn btn-secondary" asp-area="Administration" asp-controller="Receipts" asp-action="All">Върни се</button>
                <button type="submit" class="btn btn-danger" asp-area="Administration" asp-controller="Receipts" asp-action="Delete" asp-route-id="@Model.Id">Изтрий</button>
            </div>
        </form>
    </div>
</div>
