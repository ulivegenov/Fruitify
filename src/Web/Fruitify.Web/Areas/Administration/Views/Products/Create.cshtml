@using Fruitify.Data.Models.Enums.Product;

@model Fruitify.Web.ViewModels.Administration.Products.ProductWebInputModel

@{
    this.ViewData["Title"] = "Create Product";
}

<div class="row">
    <div class="col-md-12">
        <section>
            <form id="account" enctype="multipart/form-data" method="post">
                <h4>Добави нов продукт</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Type" class="label"></label>
                    <select class="form-control" asp-for="Type" asp-items="Html.GetEnumSelectList<ProductType>()">
                        <option value="">Избери вид</option>
                    </select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image"></label>
                    <input asp-for="Image" name="Image" type="file" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Създай</button>
                </div>
            </form>
        </section>
    </div>
</div>
