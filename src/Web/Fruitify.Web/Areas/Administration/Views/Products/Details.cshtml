@using Fruitify.Data.Models.Enums.Product

@model Fruitify.Web.ViewModels.Administration.Products.ProductWebDetailsModel

@{
    this.ViewData["Title"] = "Product Details";
}

<div class="row">
    <div style="margin:auto">
        <form id="account" enctype="multipart/form-data" method="post">
            <h4 class="text-center">Детайли</h4>
            <hr style="width:100%" />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <br />
                <input asp-for="Name" style="height:20px; border-radius:4px" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <br />
                <input asp-for="Price" style="height:20px; border-radius:4px" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PromoPrice" class="form-check-label"></label>
                <br />
                <input asp-for="PromoPrice" style="height:20px; border-radius:4px" />
                <span asp-validation-for="PromoPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="label" style="height:3px"></label>
                <br />
                <select asp-for="Type" asp-items="Html.GetEnumSelectList<ProductType>()" style="height:20px; border-radius:4px">
                    <option value="">Избери вид</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-check">
                <input asp-for="WeekProduct" class="form-check-input" />
                <label asp-for="WeekProduct" class="form-check-label" style="height:10px"></label>
                <span asp-validation-for="WeekProduct" class="text-danger"></span>
            </div>
            <div class="form-check">
                <input asp-for="DayProduct" class="form-check-input" />
                <label asp-for="DayProduct" class="form-check-label" style="height:10px"></label>
                <span asp-validation-for="DayProduct" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Image" type="hidden" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <button type="submit" class="btn btn-primary" asp-area="Administration" asp-controller="Products" asp-action="Edit" asp-route-id="@Model.Id">Промени</button>
                <button type="submit" class="btn btn-secondary" asp-area="Administration" asp-controller="Products" asp-action="All">Върни се</button>
                <button type="submit" class="btn btn-danger" asp-area="Administration" asp-controller="Products" asp-action="Delete" asp-route-id="@Model.Id">Изтрий</button>
            </div>
        </form>
    </div>
</div>
