@using Fruitify.Common

@model Fruitify.Web.ViewModels.Main.WeekProductsWebModel

@{
    ViewData["Title"] = "Week Products Partial View";
}

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center mb-3 pb-3">
            <div class="col-md-12 heading-section text-center">
                <span class="subheading">Актуални продукти</span>
                <h2 class="mb-4">Продукти на седмицата</h2>
                <p>Плодовете и зеленчуците съдържат разнообразие от хранителни елементи, жизнено важни за човешкото здраве.</p>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            @foreach (var product in Model.Products)
            {
                <div class="col-md-6 col-lg-3">
                    <partial name="ProductPartial" model="product" />
                </div>
            }
        </div>
    </div>
</section>